<p id="notice"></p>

<div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

<h1>User info</h1>

<%= render "errors/errors", obj: @user %>

<%= form_with model: @user do |f| %>

<div class="form-group">

<label for="user_name">Name</label>

<%= f.text_field :name, autofocus: true, id:"inputName", placeholder: "名前", class: "form-control name" %></br>

</div>

<div class="form-group">

<label for="user_image">Image</label>

  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*", class: "form-control-file user_image" %></br>

</div>

<div class="form-group">
  
<label for="use_introduction">Introduction</label>

  <%= f.text_area :introduction, placeholder: "自己紹介", class: "form-control introduction" %></br>

</div>

<div class="form-group">

  <%= f.submit "Update User", class: "btn btn-success" %>

</div>

<% end %>

</div>