<%= render 'users/user', user: @user %>

<%= render 'books/list', book: @book %>

<h1>Books</h1>

<table>

  <thead>

    <tr>
      
      <th></th>

      <th>Title</th>

      <th>Opinion</th>

      <th></th>

    </tr>

  </thead>

  <tbody>
    
    <% @books.each do |book| %>
    
    <tr>
      
      <td>

          <%= link_to user_path(@user.id) do %>

            <%= image_tag @user.get_profile_image(100,100) %>

          <% end %>
    
      </td>

      <td>
        
        <%= link_to book.title, book_path(book.id) %>
        
      </td>
      
      <td>
        
        <%= book.body %>
        
      </td>

    <% end %>
    
    </tr>

  </tbody>
  
</table>